<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhukov.guessnumber.MainActivity"
    android:layout_gravity="center"
    android:configChanges = "orientation|keyboardHidden"
    >





    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="5dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:id="@+id/alarmText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/guessNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="number"
            tools:layout_editor_absoluteY="109dp"
            tools:layout_editor_absoluteX="69dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:onClick="guessNumberTextOnClick"/>

        <Button
            android:id="@+id/letsGuessButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/letsGuess"
            android:layout_margin="5dp"
            android:onClick="letsguess"
            />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
